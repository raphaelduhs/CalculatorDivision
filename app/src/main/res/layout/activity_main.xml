<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.raphaelduhs.calculator.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <EditText
            android:id="@+id/valueOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/valueTwo"
            android:layout_below="@+id/titel"
            android:layout_marginTop="56dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="1"
            android:inputType="textPersonName"
            android:selectAllOnFocus="false"
            android:singleLine="false" />

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button"
            android:layout_alignTop="@+id/button"
            android:layout_marginTop="81dp"
            android:layout_weight="1"
            android:text="Resultat"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="376dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/valueTwo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:onClick="calculate"
            android:text="Dividiere"
            android:visibility="visible"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="295dp" />

        <TextView
            android:id="@+id/titel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/valueTwo"
            android:layout_marginTop="112dp"
            android:layout_weight="1"
            android:text="Divisionsrechner"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/valueTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/button"
            android:layout_below="@+id/valueOne"
            android:layout_marginTop="48dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="1"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/valueOne"
            android:layout_alignBottom="@+id/valueOne"
            android:layout_alignStart="@+id/button"
            android:text="Dividend" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Divisor"
            android:layout_alignBaseline="@+id/valueTwo"
            android:layout_alignBottom="@+id/valueTwo"
            android:layout_alignStart="@+id/button" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
